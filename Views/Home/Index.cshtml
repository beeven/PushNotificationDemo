@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="text-center">
    <button onclick="notifyMe()">Notify me!</button>
</div>

<div class="text-center">
    <p>
    <span>Service worker kind:</span><span id="kind"></span>
    </p>
    <p>
        <span>state: </span><span id="state"></span>
    </p>
</div>
<div class="d-flex flex-row justify-content-center p-2">
    <div class="mx-2">
        <label for="clientId">ClientID:</label>
        <input id="clientId" type="text" placeholder="ClientId" value="beeven"/>
    </div>
    <button class="mx-2" type="submit" disabled=true id="subscriptionButton">Subscribe</button>
</div>

<div class="text-center mt-1">
    <button onclick="postMessage()">Send message to worker</button>
</div>
<div class="text-center mt-1">
    <span id="message" >waiting message from worker...</span>
</div>

<div class="text-center mt-2">
    <button onclick="sendPushNotification()" >Send Push Notification</button>
</div>